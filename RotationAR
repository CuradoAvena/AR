using UnityEngine;
using UnityEngine.UI;

public class ARRotationSlider : MonoBehaviour
{
    [Header("Objeto a rotar")]
    public Transform targetObject;

    [Header("Slider de rotación")]
    public Slider rotationSlider;

    [Header("Configuración")]
    public float minAngle = 0f;
    public float maxAngle = 360f;

    void Start()
    {
        if (targetObject == null)
            targetObject = this.transform;

        if (rotationSlider != null)
        {
            rotationSlider.minValue = 0f;
            rotationSlider.maxValue = 1f;
            rotationSlider.onValueChanged.AddListener(RotateObject);
        }
        else
        {
            Debug.LogWarning("No se ha asignado un Slider en el Inspector.");
        }
    }

    void RotateObject(float value)
    {
        float angle = Mathf.Lerp(minAngle, maxAngle, value);
        targetObject.rotation = Quaternion.Euler(0, angle, 0);
    }
}
